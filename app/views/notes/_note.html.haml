%tr
  %td= note.title
  %td= truncate note.body
  %td= time_ago_in_words note.created_at
  %td.3.fluid.ui.tiny.buttons
    = link_to 'Show', note, class: 'ui button'
    = link_to 'Edit', edit_note_path(note), class: 'ui button'
    = link_to 'Destroy', note, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'ui button red'
